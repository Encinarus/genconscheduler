<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <listener>
    <listener-class>com.lightpegasus.scheduler.web.OverrideContextListener</listener-class>
  </listener>

  <!-- Objectify filters need to happen on every request, to clean up thread locals. -->
  <filter>
    <filter-name>ObjectifyFilter</filter-name>
    <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
  </filter>
  <filter>
    <filter-name>TemplateFilter</filter-name>
    <filter-class>com.lightpegasus.scheduler.web.TemplateFilter</filter-class>
  </filter>
  <filter>
    <filter-name>ServletFilter</filter-name>
    <filter-class>com.lightpegasus.scheduler.web.ServletFilter</filter-class>
  </filter>
  <servlet>
    <servlet-name>categories</servlet-name>
    <jsp-file>/jsp/categories.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>categoryDetails</servlet-name>
    <jsp-file>/jsp/categoryDetails.jsp</jsp-file>
  </servlet>

  <filter-mapping>
    <filter-name>ObjectifyFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>TemplateFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>ServletFilter</filter-name>
    <url-pattern>/2016/*</url-pattern>
  </filter-mapping>
  <servlet-mapping>
    <servlet-name>categories</servlet-name>
    <url-pattern>/2016/categories/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>categoryDetails</servlet-name>
    <url-pattern>/2016/category/*</url-pattern>
  </servlet-mapping>
  <filter-mapping>
    <filter-name>ServletFilter</filter-name>
    <url-pattern>/2017/*</url-pattern>
  </filter-mapping>
  <servlet-mapping>
    <servlet-name>categories</servlet-name>
    <url-pattern>/2017/categories/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>categoryDetails</servlet-name>
    <url-pattern>/2017/category/*</url-pattern>
  </servlet-mapping>
</web-app>
